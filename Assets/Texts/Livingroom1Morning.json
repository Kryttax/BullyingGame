{
	"mother": {
		"root": {
			"type": "fork",
			"options": [{
				"next": "motherSoon",
				"condition": "varObject('calendar', 'HourNonStatic') < 8"
			},
			{
				"next": "motherLate",
				"condition": "varObject('calendar', 'HourNonStatic') >= 8"
			}]
		},
		"motherSoon": {
			"type": "dialog",
			"fragments": [{
				"tag": "Mama",
				"msn": "Veo que ya estás listo para irte"
			}, 
			{
				"tag": "Mama",
				"msn": "¿Llevas todo?, Acuerdate de coger la mochila"
			},
			{
				"tag": "Mama",
				"msn": "Portate bien y haz muchos amigos"
			}]
		},		
		"motherLate": {
			"type": "dialog",
			"fragments": [{
				"tag": "Mama",
				"msn": "¿Has visto la hora que es?"
			}, 
			{
				"tag": "Mama",
				"msn": "Tu primer día en el nuevo colegio y ya llegas tarde"
			},
			{
				"tag": "Mama",
				"msn": "Venga, coge todo lo que necesites y vete YA!"
			}]
		}
	},
	"exitDoor": {
		"root": {
			"type": "fork",
			"options": [{
				"next": "exitNode",
				"condition": "varObject('state', 'BagPicked') == true"
			},
			{
				"next": "dialogNode",
				"condition": "varObject('state', 'BagPicked') == false"
			}]
		},
		"exitNode": {
			"type": "event",
			"event": {
				"name": "change scene",
				"var": "scene",
				"value": 3
			}
		},
		"dialogNode": {
			"type": "dialog",
			"fragments": [{
				"tag": "",
				"msn": "Te olvidas la mochila \n Será mejor que pases por tu habitación a recogerla antes de irte"
			}]
		}
	}
}